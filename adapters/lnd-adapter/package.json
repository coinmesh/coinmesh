  "license": "ISC",
  "bugs": {
    "url": "https://github.com/coinmesh/coinmesh/issues"
  },
  "homepage": "https://github.com/coinmesh/coinmesh#readme",
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "dns-sync": "^0.1.3",
    "express-basic-auth": "^1.1.5",
    "jasmine": "^3.2.0",
    "ln-service": "^17.9.0",
    "nodemon": "^1.18.4",
    "openport": "0.0.5",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0"
  }
}
