{
  "name": "@coinmesh/coinmesh",
  "version": "0.0.1",
  "description": "An ecosystem for building Litecoin and Bitcoin applications.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "concurrently \"npm run client\" \"npm run litecoind-adapter\" \"npm run admin-logic-service\"",
    "client": "cd ./client-applications/admin && npm start",
    "litecoind-adapter": "cd ./adapters/litecoind-adapter && npm start",
    "admin-logic-service": " cd ./logic-services/admin && npm start",
    "generate-docs": "cd ./docs/api-docs && bundle exec middleman build --clean",
    "docs": "cd ./docs/api-docs && bundle exec middleman server",
    "copy-docs": "cp -R docs/*.md ../coinmesh.com-site/docs/ && cp -R docs/api-docs/build/* ../coinmesh.com-site/docs/api-docs/",
    "recursive-install": "node_modules/.bin/npm-recursive-install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockfuse/coinmesh.git"
  },
  "author": "Patrick Walters <patrick.walters@blockfuse.io> (http://blockfuse.io/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/blockfuse/coinmesh/issues"
  },
  "homepage": "https://github.com/blockfuse/coinmesh#readme",
  "dependencies": {
    "concurrently": "^3.5.1",
    "recursive-install": "^1.3.0"
  }
}
